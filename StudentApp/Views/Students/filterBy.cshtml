@model IEnumerable<StudentApp.Models.Student>
<br /><br /><br />
<p>
    @using (Html.BeginForm())
    {
        <text>School : </text>@Html.DropDownList("schl", new SelectList(ViewBag.School))
        <text> Division : </text>@Html.DropDownList("division", new SelectList(ViewBag.Division))
        <input type="submit" value="search" />
    }
</p>
<br /><br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Full_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.School)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Division)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parent_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parent_Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parent_Work)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Full_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.School)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Division)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parent_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parent_Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parent_Work)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
